<div class="columns">
  <div class="column is-half is-offset-3">
    <h1 class="title is-5">Login</h1>
    <hr class="mb-6">

    <%= form_with model: @user do |f| %>
      <div class="field">
        <label class="label">Email:</label>
        <div class="control">
          <%= f.email_field :email, class: 'input' %>
        </div>
      </div>

      <div class="field">
        <label class="label">Password:</label>
        <div class="control">
          <%= f.password_field :password, class: 'input' %>
        </div>
      </div>

      <div class="buttons">
        <%= f.submit class: 'button is-info' %>
      </div>
    <% end %>
  </div>
</div>

